    <!-- Base activity theme -->
    <!-- MaterialComponents theme adds margin at the end of overflow menu items -->
    <style name="AppThemeGreen" parent="Theme.AppCompat.DayNight">

        <!-- Define custom attributes unique to the theme -->
        <item name="accent">@color/green</item>
        <item name="accentTrans1">@color/greenTrans1</item>
        <item name="accentTrans2">@color/greenTrans2</item>
        <item name="accentTrans3">@color/greenTrans3</item>
        <item name="accentDark1">@color/greenDark1</item>
        <item name="accentDark2">@color/greenDark2</item>
        <item name="app_icon">@drawable/icon_green</item>

        <!-- Preference Group Titles, Dialog Button Text -->
        <item name="colorAccent">?attr/accent</item>

        <!-- Check Boxes, Radio Buttons, Switch Active State, Indeterminate Progress Bar.
          If not set, uses colorAccent -->
        <!--<item name="colorControlActivated">?attr/accent</item>-->

        <!-- Status Bar -->
        <item name="colorPrimaryDark">?attr/accentDark2</item>

        <!-- Action Bar, CircularProgressIndicator, Page Tabs indicator -->
        <item name="colorPrimary">?attr/accentDark1</item>

        <!-- Custom Styles -->
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Do not resize layout when switching between
          SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN and SYSTEM_UI_FLAG_FULLSCREEN -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">never</item>
    </style>

    <style name="SpinnerItemStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/spinner_color</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="windowFixedWidthMajor">65%</item>
        <item name="windowFixedWidthMinor">95%</item>

        <!-- Dialog Button Text. Required when using MaterialComponents theme for Application or Activity-->
        <!--<item name="buttonBarButtonStyle">@style/ButtonBarStyle</item>-->

        <!-- RadioButton color in ChoiceItem list -->
        <item name="colorAccent">?attr/accent</item>

        <!-- CircularProgressIndicator color -->
        <item name="colorPrimary">?attr/accentDark1</item>

        <item name="colorPrimaryDark">?attr/accentDark2</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/button_text</item>
    </style>

